generator client {
  provider = "prisma-client-js"
}

// Note: The `url` property is valid and required for Prisma 6.x
// The linter may show a warning about Prisma 7 syntax, but this schema is correct for Prisma 6.19.0
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String   @id @default(cuid())
  email               String   @unique
  password            String
  walletAddress       String?
  stakeAmount         Decimal? @db.Decimal(10, 2)
  stakeTransactionHash String?
  points              Int      @default(0)
  rank                String?  @map("user_rank") // "CADET", "OFFICER", "ARBITER" - mapped to avoid conflict with PostgreSQL rank() function
  rankUpdatedAt       DateTime?
  godModeBadge        Boolean  @default(false)
  godModeBadgeEarnedAt DateTime?
  totalVotes          Int      @default(0)
  correctVotes        Int      @default(0)
  accuracy30DayStart  DateTime?
  consecutiveCorrectDays Int   @default(0)
  isBanned            Boolean  @default(false)
  votes               Vote[]
  notifications       Notification[]
  voteAccuracies      VoteAccuracy[]
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model Task {
  id                String   @id @default(cuid())
  text              String
  taskType          String
  taskTier          String?  // "TRAINING", "LIVE_FIRE", "DISPUTE"
  paymentSignature  String?
  status            String   @default("pending")
  result            Json?
  agentName         String?
  reward            String?
  rewardAmount      Decimal? @db.Decimal(10, 2)
  category          String?
  escrowAmount      String?
  context           Json?
  aiCertainty       Decimal? @db.Decimal(3, 2)
  requiredVoters    Int?     @default(3)
  consensusThreshold Decimal? @db.Decimal(3, 2)
  currentVoteCount  Int      @default(0)
  yesVotes          Int      @default(0)
  noVotes           Int      @default(0)
  currentPhase      Int      @default(1)
  phaseMeta         Json?
  votes             Vote[]
  voteAccuracies    VoteAccuracy[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Vote {
  id        String   @id @default(cuid())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  decision  String   // "yes" or "no"
  createdAt DateTime @default(now())

  @@index([taskId])
  @@index([userId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String
  title     String
  body      String
  metadata  Json?
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId, isRead])
}

model VoteAccuracy {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  taskId           String
  task             Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  voteDecision     String   // "yes" or "no"
  consensusDecision String  // "yes" or "no"
  isCorrect        Boolean
  createdAt        DateTime @default(now())

  @@index([userId, createdAt])
  @@index([taskId])
}
