generator client {
  provider = "prisma-client-js"
}

// Note: The `url` property is valid and required for Prisma 6.x
// The linter may show a warning about Prisma 7 syntax, but this schema is correct for Prisma 6.19.0
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String   @id @default(cuid())
  email               String   @unique
  password            String
  walletAddress       String?
  stakeAmount         Decimal? @db.Decimal(10, 2)
  stakeTransactionHash String?
  votes               Vote[]
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model Task {
  id                String   @id @default(cuid())
  text              String
  taskType          String
  paymentSignature  String?
  status            String   @default("pending")
  result            Json?
  agentName         String?
  reward            String?
  rewardAmount      Decimal? @db.Decimal(10, 2)
  category          String?
  escrowAmount      String?
  context           Json?
  aiCertainty       Decimal? @db.Decimal(3, 2)
  requiredVoters    Int?     @default(3)
  consensusThreshold Decimal? @db.Decimal(3, 2)
  currentVoteCount  Int      @default(0)
  yesVotes          Int      @default(0)
  noVotes           Int      @default(0)
  votes              Vote[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Vote {
  id        String   @id @default(cuid())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  decision  String   // "yes" or "no"
  createdAt DateTime @default(now())

  @@index([taskId])
  @@index([userId])
}
